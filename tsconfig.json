{
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "lib": [
        "es2017"
      ],
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "removeComments": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "target": "es2017",
      "outDir": "dist",
      "esModuleInterop": true,
      "declaration": true
    },
    "exclude": [
      "node_modules",
      "tests"
    ]
  }
  